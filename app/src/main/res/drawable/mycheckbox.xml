<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed = "true">
        <shape>
            <stroke android:width="2dp" android:color="#000" />
            <padding android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />
            <corners android:radius="5dp" />
            <solid android:color="@color/andy_primary" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <stroke android:width="2dp" android:color="#000" />
            <padding android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />
            <corners android:radius="5dp" />
            <solid android:color="@color/andy_primary" />
        </shape>
    </item>
    <item android:state_checked="true">
        <shape>
            <stroke android:width="2dp" android:color="#000" />
            <padding android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />
            <corners android:radius="5dp" />
            <solid android:color="@color/andy_primary" />
        </shape>
    </item>
    <item>
        <shape>
            <stroke android:width="2dp" android:color="#000" />
            <padding android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />
            <corners android:radius="5dp" />
            <solid android:color="#fff" />
        </shape>
    </item>
</selector>