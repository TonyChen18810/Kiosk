<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="947dp"
        android:layout_height="605dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/dab_logo" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Congratulations! You have successfully created an account. You are now ready to log in"
        android:textColor="@color/andy_accent"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.287" />

    <Button
        android:id="@+id/LogoutBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/andy_accent"
        android:padding="20dp"
        android:text="Login"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/white"
        android:textSize="70sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView8"
        app:layout_constraintVertical_bias="0.372" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView8"
        android:layout_width="800dp"
        android:layout_height="wrap_content"
        android:clipToPadding="true"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.09">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/emailHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Email address"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@android:color/secondary_text_light"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/emailAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Email address: "
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="50sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="#C97A7171" />

            <TextView
                android:id="@+id/phoneHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Phone number"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@android:color/secondary_text_light"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/phoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Phone number: "
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="50sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="#C97A7171" />

            <TextView
                android:id="@+id/truckNameHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Truck name"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@android:color/secondary_text_light"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/truckName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Current truck name: "
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="50sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="#C97A7171" />

            <TextView
                android:id="@+id/truckNumberHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Truck number"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@android:color/secondary_text_light"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/truckNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Current truck number: "
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="50sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="#C97A7171" />

            <TextView
                android:id="@+id/trailerLicenseHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Trailer license number"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@android:color/secondary_text_light"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/trailerLicense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Current trailer license: "
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="50sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="#C97A7171" />

            <TextView
                android:id="@+id/driverLicenseHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Driver license number"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@android:color/secondary_text_light"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/driverLicense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Driver license: "
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="50sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="#C97A7171" />

            <TextView
                android:id="@+id/driverNameHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Driver name"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@android:color/secondary_text_light"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/driverName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Driver name: "
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="50sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="#C97A7171" />

            <TextView
                android:id="@+id/dispatcherPhoneHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Dispatcher phone number"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@android:color/secondary_text_light"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/dispatcherPhoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Current dispatcher's phone number: "
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="50sp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>